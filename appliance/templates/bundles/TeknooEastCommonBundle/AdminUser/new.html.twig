{# templates/bundles/TeknooEastPaasBundle/views/AdminUser/new.html.twig #}

{% extends '@TeknooSpace/dashboard.form.html.twig' %}

{% block formTitle %}{{ 'teknoo.space.title.admin_user.new'|trans }}{% endblock %}

{% block instanceMainTitle %}<i class="uil uil-user"></i> {{ 'teknoo.space.title.admin_user.new'|trans }} : {{ 'teknoo.space.title.admin.new'|trans }}{% endblock %}

{% block instanceTitle %}{{ 'teknoo.space.title.admin.new'|trans }}{% endblock %}

{% block listLink path('_teknoo_common_admin_user_list') %}

{% block crudFormFields %}
    <div class="row">
        {{ form_row(formView.user.firstName) }}
        {{ form_row(formView.user.lastName) }}
        {{ form_row(formView.user.roles, {"largeRow": true}) }}
        {{ form_row(formView.user.email, {"largeRow": true}) }}
        {{ form_row(formView.userData.picture.image, {"largeRow": true}) }}
        {% do formView.userData.picture.name.setRendered() %}
        {% do formView.userData.picture.alternative.setRendered() %}
        {% do formView.userData.removePicture.setRendered() %}
    </div>
    <div class="row">
        {{ form_row(formView.user.storedPassword.password) }}
    </div>
{% endblock %}

{% block btnExtra %}
    <div class="widget mb-2 pb-2">
        <h5 class="widget-title">{{ 'teknoo.space.text.user_status'|trans }}</h5>
        {{ form_row(formView.user.active, {'label_attr':{'class': 'switch-custom'}}) }}
    </div>
{% endblock %}
