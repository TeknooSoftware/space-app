{# templates/bundles/TeknooEastCommonBundle/User/recovery_submitted.html.twig #}

{% extends '@TeknooSpace/dashboard.layout.html.twig' %}

{% block title %}{{ 'teknoo.space.title.recovery_access.submitted'|trans }} - {% endblock %}

{% block bodyClass '' %}

{% block pageWrapper %}
    {# Hero Start #}
    <section class="bg-home bg-circle-gradiant d-flex align-items-center">
    <div class="bg-overlay bg-overlay-white"></div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card form-signin p-4 rounded shadow">
                    <a href="{{ path('space_dashboard') }}">
                        <img src="images/logo-dark.svg"
                             class="avatar avatar-login d-block mx-auto"
                             alt="Teknoo Space">
                    </a>
                    <h5 class="mb-3 text-center">{{ 'teknoo.space.title.reset_password'|trans }}</h5>
                    <p class="text-muted">{{ 'teknoo.space.text.reset_password.email_sent'|trans }}</p>
                    <div class="col-12 text-center mt-3">
                        <p class="mb-0 mt-3">
                            <small class="text-dark me-2">{{ 'teknoo.space.text.remember_password'|trans }}</small>
                            <a href="{{ path('space_account_login') }}"
                               class="text-dark fw-bold">
                                {{ 'teknoo.space.action.sign_in'|trans }}
                            </a>
                        </p>
                    </div>{# end col #}
                </div>
            </div>
        </div>
    </div> {# end container #}
    </section>{# end section #}
    {# Hero End #}
{% endblock %}
