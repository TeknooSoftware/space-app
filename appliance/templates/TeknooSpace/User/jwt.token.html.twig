{# templates/TeknooSpace/User/Jwt.html.twig #}

{% extends '@TeknooSpace/dashboard.form.html.twig' %}

{% block title %}{{ 'teknoo.space.title.user.jwt'|trans }} - {% endblock %}

{% block instanceMainTitle %}<i class="uil uil-user"></i> {{ 'teknoo.space.title.user.jwt'|trans }}{% endblock %}

{% block breadcrumbListLink %}{{ path('space_my_settings_token') }}{% endblock %}
{% block breadcrumbFormTitle %}{{ 'teknoo.space.title.user.jwt'|trans }}{% endblock %}
{% block breadcrumInstanceTitle %}{{ space.user }}{% endblock %}

{% block formParentBlock %}
    <div class="row">
        <div class="col-3 mt-4 mt-lg-0 pt-2 pt-lg-0">
            <div class="card border-0 sidebar sticky-bar rounded shadow bg-white">
                <div class="card-body">
                    {% block btnExtra '' %}
                    <div class="widget">
                        <h5 class="widget-title">{{ 'teknoo.space.text.submit_block'|trans }}</h5>
                        {% block formButton %}
                            {% block addsFormButton '' %}
                            <a href="{{ path('space_my_settings') }}"
                               class="btn btn-primary btn-full-large mb-2 text-left">
                                <i class="ti ti-settings"></i>
                                {{ 'teknoo.space.action.my-settings'|trans }}
                            </a>
                            {% block addsFormButtonBottom '' %}
                        {% endblock %}
                    </div>
                    {% block btnExtraBottom '' %}
                </div>
            </div>
        </div>{# end col #}
        <div class="col-9">
            <div class="card">
                <div class="card-body">
                    <table class="table card-text table-fixed">
                        <tbody>
                        <tr>
                            <th class="col-2" scope="row">Token</th>
                            <td class="col-10">
                                <span class="jwt-token-value">{{ jwtToken }}</span>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
